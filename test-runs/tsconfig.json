{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"sourceMap": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "src/__tests__"]
}
